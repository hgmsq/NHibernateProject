@using NHibernateProject2.Models;
@model IList<Category>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div> 
        <table>
            <thead>
                <tr>
                    <th>
                        分类名称
                    </th>
                    <th>
                        操作
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr><td>@item.Name</td><td>@Html.ActionLink("编辑", "Edit", new  {id=@item.Id }) &nbsp;
                        @Html.ActionLink("删除", "Delete", new { id = @item.Id }, new { onclick="confirm()"})
                        </td></tr>            
                }
            </tbody>
        </table>

    
    </div>
    <script type="text/javascript">
        function confirm()
        {
            if (!confirm("是否删除该分类？")) {
                window.event.returnValue = false;
            }
        }
    </script>
</body>
</html>
